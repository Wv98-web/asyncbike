<div class="a1-section3">
    {%- if section.blocks.size > 0 -%}
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="swiper-slide" style="{% if block.settings.swiper_image != blank %}background-image: url({{ block.settings.swiper_image | img_url: 'master' }});{% endif %} background-position:center; " >

            <div class="con-box">
                {%- if block.settings.title != blank -%}
                  <h1>
                    {{ block.settings.title | escape }}
                  </h1>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <p>
                    {{ block.settings.description | escape }}
                  </p>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    {%- endif -%}
</div>
{%- style -%}

  .a1-section3 .swiper-pagination .swiper-pagination-bullet{background:{{ section.settings.pagination_color }}}
  .a1-section3 .swiper-pagination .swiper-pagination-bullet-active{background:{{ section.settings.pagination_a_color }} }

  @media (min-width: 767px) {
    .a1-section3 h1 {
      font-size: {{ section.settings.title_fs }}rem;
      line-height: {{ section.settings.title_lh }}rem;
    }
    .a1-section3 p {
      font-size: {{ section.settings.description_fs }}rem;
      line-height: {{ section.settings.description_lh }}rem;
    }
  }

  @media (max-width: 768px) {
    .a1-section3 h1 {
      font-size: {{ section.settings.title_fs_mobile }}rem;
      line-height: {{ section.settings.title_lh_mobile }}rem;
    }
    .a1-section3 p {
      font-size: {{ section.settings.description_fs_mobile }}rem;
      line-height: {{ section.settings.description_lh_mobile }}rem;
    }
  }

{%- endstyle -%}

<script>
  var swiper = new Swiper(".mySwiper", {
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
    },
    breakpoints: { 
      320: {
        direction: "horizontal",
      },
      769: {
        direction: "horizontal",
      }
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>


{{ 'h-sidebar-menu.css' | asset_url | stylesheet_tag }}

<!-- 侧边菜单 -->
<nav class="js_sidebar_menu sidebar-menu-wrap">
    <div class="sider-menu-logo">
        <a href="/">
            <img 
                srcset= "{{ section.settings.logo | img_url: 'master' }}"
                src="{{ section.settings.logo | img_url: 'master' }}"
                alt="{{ section.settings.logo.alt | escape }}"
                loading="lazy"
                width="{{ section.settings.logo.width }}"
                height="{{ section.settings.logo.height }}" />
        </a>
    </div>
    <ul id="sider-menu">
        <li data-menuanchor="anchor-a1"><a href="/pages/a1">A1</a></li>
        <li data-menuanchor="anchor-brand"><a href="/pages/brand">BRAND</a></li>
        <li data-menuanchor="anchor-team"><a href="#anchor-team">TEAM</a></li>
    </ul>
</nav>


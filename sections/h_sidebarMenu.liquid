{%- style -%}
    .sidebar-menu-wrap {
        background-color: {{ section.settings.bg_color }};
        -webkit-backdrop-filter: blur({{ section.settings.filter }}px);
        backdrop-filter: blur({{ section.settings.filter }}px);
        border-radius: {{ section.settings.bg_radius }}rem;
    }

    .sidebar-menu-wrap .sider-menu-logo img {
        width: {{ section.settings.logo_size }}rem;
    }

    @media (max-width: 768px) {
        .sidebar-menu-wrap .sider-menu-logo img {
            width: {{ section.settings.m_logo_size }}rem;
        }
    }

    #sider-menu li a {
        color: {{ section.settings.txt_color }};
    }

    #sider-menu li.active {
        border-bottom: 2px solid;
        border-color: {{ section.settings.border_color }};
    }

    #sider-menu li.active a,
    #sider-menu li:hover a {
        color: {{ section.settings.txt_hover_color }};
    }
{%- endstyle -%}

{% schema %}
{
    "name": "SideBar Menu",
    "tag": "section",
    "settings": [
        {
            "type": "header",
            "content": "== Color"
        },
        {
            "type": "color",
            "id": "txt_color",
            "label": "文字颜色",
            "default": "#C1C1C1"
        },
        {
            "type": "color",
            "id": "txt_hover_color",
            "label": "文字高亮颜色",
            "default": "#FFFFFF"
        },
        {
            "type": "color",
            "id": "border_color",
            "label": "下边框高亮颜色",
            "default": "#FF4F00"
        },
        {
            "type": "color_background",
            "id": "bg_color",
            "label": "背景颜色",
            "default": "transparent"
        },
        {
            "type": "range",
            "id": "bg_radius",
            "label": "背景圆角",
            "default": 6,
            "min": 0,
            "max": 10,
            "step": 0.1,
            "unit": "rem"
        },
        {
            "type": "range",
            "id": "filter",
            "label": "高斯模糊",
            "default": 5,
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px"
        },
        {
            "type": "header",
            "content": "==Content"
        },
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo图片"
        },
        {
            "type": "range",
            "id": "logo_size",
            "label": "Logo图片大小",
            "default": 7,
            "min": 1,
            "max": 10,
            "step": 0.1,
            "unit": "rem"
        },
        {
            "type": "range",
            "id": "m_logo_size",
            "label": "Logo图片大小( 移动端 )",
            "default": 5,
            "min": 1,
            "max": 10,
            "step": 0.1,
            "unit": "rem"
        }
    ],
    "presets": [
        {
            "name": "SideBar Menu"
        }
    ]
}
{% endschema %}
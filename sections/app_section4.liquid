          "id": "description_lh",
          "label": "描述行间距",
          "default": 3.2,
          "min": 1,
          "max": 10,
          "step": 0.1,
          "unit": "rem"
        },
        {
          "type": "range",
          "id": "description_lh_mobile",
          "label": "移动端描述行间距",
          "default": 2.4,
          "min": 1,
          "max": 10,
          "step": 0.1,
          "unit": "rem"
        },
        {
          "type": "color",
          "id": "txt_color",
          "label": "文字颜色"
        },
        {
          "type": "color",
          "id": "line_color",
          "label": "横线颜色"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "App Section 4"
    }
  ]
}
{% endschema %}

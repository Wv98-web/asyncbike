          "label": "标题行间距",
          "default": 8,
          "min": 1,
          "max": 10,
          "step": 0.1,
          "unit": "rem"
        },
        {
          "type": "range",
          "id": "title_lh_mobile",
          "label": "移动端标题行间距",
          "default": 2.4,
          "min": 1,
          "max": 10,
          "step": 0.1,
          "unit": "rem"
        },
        {
          "type": "textarea",

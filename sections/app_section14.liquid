<div class="app-section14" style="{% if section.settings.bg_color != blank %}background: {{ section.settings.bg_color}};{% endif %}">
 
  <div class = "con-box">

    <div class="l" >

      <div class="child-con-box">
       
        {%- if section.settings.description != blank -%}
          <p>
            {{ section.settings.description | escape }}
          </p>
        {%- endif -%}
      </div>

       {%- if section.settings.left_img != blank -%}
        <img
          class="pc-show"
          srcset= "{{ section.settings.left_img | img_url: 'master' }}"
          src="{{ section.settings.left_img | img_url: 'master' }}"
          alt="{{ section.settings.left_img.alt | escape }}"
          loading="lazy"
        />
      {%- endif -%}

      {%- if section.settings.left_img_mobile != blank -%}
        <img
          class="mobile-show"
          srcset= "{{ section.settings.left_img_mobile | img_url: 'master' }}"
          src="{{ section.settings.left_img_mobile | img_url: 'master' }}"
          alt="{{ section.settings.left_img_mobile.alt | escape }}"
          loading="lazy"
        />
      {%- endif -%}

     
     
    </div>

    <div class="r">
      {%- if section.settings.right_img != blank -%}
        <img
          class="pc-showimg1"
          srcset= "{{ section.settings.right_img | img_url: 'master' }}"
          src="{{ section.settings.right_img | img_url: 'master' }}"
          alt="{{ section.settings.right_img.alt | escape }}"
          loading="lazy"
        />
      {%- endif -%}
    </div>

   </div>
</div>

{%- style -%}

  /* ----------APP Section 9---------- */
  .app-section14 {padding-bottom: 12rem;}
  .app-section14 .con-box{width:89.6%;margin: 0 auto;display: flex;}
  .app-section14 .con-box .l img{padding: 0 15% 0 15%;}
  .app-section14 .con-box .l{width: 50%;text-align: left;position: relative;}
  .app-section14 .con-box p{font-family: HarmonyOS_Sans_Regular;max-width: 90%;text-align: left;}
  .app-section14 .con-box .r{width:50%;margin-left:auto;position:relative;text-align:right}
       .app-section14 img{width:100%;
  vertical-align:middlel;
  object-fit:cover;}

  @media (min-width: 767px) {

    .mobile-show{display:none}
   
    .app-section14 .l p {
      font-size: {{ section.settings.description_fs }}rem;
      line-height: {{ section.settings.description_lh }}rem;
      color: {{ section.settings.txt_color }};
    }
    .app-section14 .con-box .r .pc-showimg{
      width: 40%;
      position: absolute;
      top: 20px;
      left: -123px;
    }
    .app-section14 .con-box .l{ width: 42%; }
  }

  @media (max-width: 880px){
    .app-section14 .con-box .r .pc-showimg{ left: -66px; }
  }
  
  @media (max-width: 768px) {
    .app-section14 {
    padding-bottom: 7rem;
}
    .app-section14 .pc-show{display:block}
    .app-section14 .mobile-show{display:block}
    .app-section14 .con-box .l{ width: 100% !important; text-align: center;min-height: auto !important; margin-bottom: 20px;z-index: 2;}
    .child-con-box{ margin-left: 0 !important; }
    .app-section14 .con-box p{ color: #000; text-align: left; font-size:1.5rem;line-height:2rem; max-width: 95% !important; }
    .app-section14 .con-box .l img{ width: 50%;padding:0;margin-top: 12%;}

    .app-section14 .con-box .r{
      width: 100%;margin-top: 20%;    position: absolute;
    right: 5%;
    }
    .app-section14 .con-box .r .pc-showimg1{
      width: 75%;
    }
    .app-section14 .con-box .r .pc-showimg{
      width: 35%;
      position: absolute;
      left: 0px;
      top: -9px;
    }
    .app-section14 .con-box{
      flex-direction: column;
    }
  }

{%- endstyle -%}

{% schema %}
{
  "name": "APP Section 14",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "描述"
    },
    {
      "type": "range",
      "id": "description_fs",
      "label": "描述文字大小",
      "default": 2.8,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "description_fs_mobile",
      "label": "移动端描述文字大小",
      "default": 1.2,
      "min": 1,
      "max": 5,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "description_lh",
      "label": "描述行间距",
      "default": 3.2,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "description_lh_mobile",
      "label": "移动端描述行间距",
      "default": 2.4,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "color",
      "id": "line_color",
      "label": "横线颜色"
    },
    {
      "type": "color",
      "id": "txt_color",
      "label": "文字颜色"
    },
    {
      "type": "image_picker",
      "id": "left_img",
      "label": "左边图片"
    },
    {
      "type": "image_picker",
      "id": "left_img_mobile",
      "label": "手机端左边图片"
    },
    {
      "type": "image_picker",
      "id": "right_img",
      "label": "右边图片"
    }
    
  ],
  "presets": [
    {
      "name": "APP Section 14"
    }
  ]
}
{% endschema %}

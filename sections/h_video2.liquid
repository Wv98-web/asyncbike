{{ 'h-section-video2.css' | asset_url | stylesheet_tag }}

<div class="section-video2 section-{{ section.id }} show m_hide">
  {%- if section.settings.video_url != blank -%}
    <video class="myVideo" {% if section.settings.poster != blank %} poster="{{ section.settings.poster | img_url: 'master' }}"{% endif %} controls="controls" webkit-playsinline="true" x-webkit-airplay="true" playsinline="true" x5-video-player-type="h5" x5-video-orientation="h5">
      <source src={{ section.settings.video_url }} type="video/mp4">
    </video>
    <div class="video-button js_video_play"></div>
  {%- endif -%}
</div>

<div class="section-video2 section-{{ section.id }} hide m_show">
  {%- if section.settings.m_video_url != blank -%}
    <video class="myVideo" {% if section.settings.m_poster != blank %} poster="{{ section.settings.m_poster | img_url: 'master' }}"{% endif %} controls="controls" webkit-playsinline="true" x-webkit-airplay="true" playsinline="true" x5-video-player-type="h5" x5-video-orientation="h5">
      <source src={{ section.settings.m_video_url }} type="video/mp4">
    </video>
    <div class="video-button js_video_play"></div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Video2",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "== 视频部分设置"
    },
    {
      "type": "image_picker",
      "id": "poster",
      "label": "视频封面"
    },
    {
      "type": "image_picker",
      "id": "m_poster",
      "label": "视频封面(移动端)"
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "视频地址",
      "info": "从商店后台文件复制链接"
    },
    {
      "type": "text",
      "id": "m_video_url",
      "label": "视频地址(移动端)"
    }
  ],
  "presets": [
    {
      "name": "Video2"
    }
  ]
}
{% endschema %}

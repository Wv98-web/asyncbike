<div class="a1-section2" style="background: url({{ section.settings.bg_img | img_url: 'master' }}) repeat">
  {%- if section.settings.txt != blank -%}
    <p>
      {{ section.settings.txt | escape }}
    <p>
    <div class="bg2">
      <div class="bg21"></div>
      <div class="bg22"></div>
    </div>
  {%- endif -%}
</div>
{%- style -%}


  @media (min-width: 767px) {
    .a1-section2 p {
      font-size: {{ section.settings.txt_fs }}rem;
      line-height: {{ section.settings.txt_lh }}rem;
    }
  }

  @media (max-width: 768px) {
    .a1-section2 p {
      font-size: {{ section.settings.txt_fs_mobile }}rem;
      line-height: {{ section.settings.txt_lh_mobile }}rem;
    }
  }

{%- endstyle -%}


{% schema %}
{
  "name": "A1 section 2",
  "tag": "section",
  "class": "section",
  "settings": [

    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "背景图片"
    },
    {
      "type": "textarea",
      "id": "txt",
      "label": "描述"
    },
    {
      "type": "range",
      "id": "txt_fs",
      "label": "描述文字大小",
      "default": 2.3,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "txt_fs_mobile",
      "label": "移动端描述文字大小",
      "default": 1.2,
      "min": 1,
      "max": 5,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "txt_lh",
      "label": "描述行间距",
      "default": 6.4,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "txt_lh_mobile",
      "label": "移动端描述行间距",
      "default": 2.4,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    }
  ],
  "presets": [
    {
      "name": "A1 section 2"
    }
  ]
}
{% endschema %}
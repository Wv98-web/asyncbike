<div class="app-section11" style="{% if section.settings.bg_color != blank %}background: {{ section.settings.bg_color}};{% endif %}">
  <div class = "con-box">

    <div class="l" >

      {%- if section.settings.left_img != blank -%}
        <img
          srcset= "{{ section.settings.left_img | img_url: 'master' }}"
          src="{{ section.settings.left_img | img_url: 'master' }}"
          alt="{{ section.settings.left_img.alt | escape }}"
          loading="lazy"
        />
      {%- endif -%}

    </div>

    <div class="r">

    <div class="child-con-box">
        {%- if section.settings.left_title != blank -%}
          <h1>
            {{ section.settings.left_title | escape }}
          </h1>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p>
            {{ section.settings.description | escape }}
          </p>
        {%- endif -%}
      </div>
      {%- if section.settings.right_img != blank -%}
        <img
          srcset= "{{ section.settings.right_img | img_url: 'master' }}"
          src="{{ section.settings.right_img | img_url: 'master' }}"
          alt="{{ section.settings.right_img.alt | escape }}"
          loading="lazy"
        />
      {%- endif -%}
      
    </div>
   </div>
</div>

{%- style -%}

  /* ----------APP Section 11---------- */
  .app-section11{padding-top:5rem;}
  .app-section11 .con-box{width:89.6%;margin: 0 auto;display: flex; align-items: center;}
  .app-section11 .con-box .r img{margin-top: 5%;}
  .app-section11 .con-box .r{width: 50%;text-align: left;position: relative;margin-left:auto}
  .app-section11 .con-box h1{font-family: EurostileNextW1G-WideSmBd;text-transform:uppercase;padding-bottom: 3.6rem;margin-bottom: 4rem;}
  .app-section11 .con-box p{font-family: HarmonyOS_Sans_Regular;max-width: 90%;text-align: left;}
  .app-section11 .con-box .l{width:50%;position:relative;padding: 0px 13% 0 13%;}
     .app-section11 img{width:100%;
  vertical-align:middlel;
  object-fit:cover;}

  @media (min-width: 767px) {
  
    .app-section11 .r h1 {
      font-size: {{ section.settings.left_title_fs }}rem;
      line-height: {{ section.settings.left_title_lh }}rem;
      color: {{ section.settings.txt_color }};
      border-bottom:solid 0.1rem {{ section.settings.line_color }};
    }
    
    .app-section11 .r p {
      font-size: {{ section.settings.description_fs }}rem;
      line-height: {{ section.settings.description_lh }}rem;
      color: {{ section.settings.txt_color }};
    }
    .app-section11 .con-box{
      justify-content: space-around;
    }
    .app-section11 .con-box .r{ margin-left: 0; }
    
  }

  @media (max-width: 768px) {
      .app-section11{padding-top:0rem;}
    .app-section11 .con-box .r{ display: flex; flex-direction: column-reverse; width: 100% !important;}
    .app-section11 .con-box .r img{ width: 80%;margin:0 0 10% 0; }
    .app-section11 .con-box .r .child-con-box{ margin-left: 0rem !important; }
    .app-section11 .con-box .r .child-con-box h1 , .app-section11 .con-box .r .child-con-box p{ color: #fff; }
    .app-section11 .con-box .r .child-con-box h1{ text-align: left;font-size:2rem;padding:0 0 2rem 0;;margin-bottom:2rem;border-bottom: 1px solid;line-height: 2.8rem; }
    .app-section11 .con-box .r .child-con-box p { text-align: left; font-size:1.5rem;line-height:2rem; max-width: 95% !important; }
    .app-section11 .con-box{ position: relative; }
    .app-section11 .con-box .l{
      width: 40% !important;
      position: absolute;
      top: -8%;
      z-index: 1;
      right: 0;
      padding: 0;
    }
  }

{%- endstyle -%}


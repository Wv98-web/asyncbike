<div class="app-section13" style="{% if section.settings.bg_color != blank %}background: {{ section.settings.bg_color}};{% endif %}">

    <div class="top-des">
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description | escape }}</p>
      {%- endif -%}
    </div>

    <ul class="img-list">
      {%- for block in section.blocks -%}
        <li class="image-item">
          {%- if block.settings.image != blank -%}
              <img
                srcset= "{{ block.settings.image | img_url: 'master' }}"
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
              />
            {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>

    {%- if section.blocks.size > 0 -%}
      <div class="swiper mobilemySwiper">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="swiper-slide">
              <img
                srcset= "{{ block.settings.image | img_url: 'master' }}"
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
              />
            </div>
          {%- endfor -%}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    {%- endif -%}
</div>

<script>
  var swiper = new Swiper(".mobilemySwiper", {
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    breakpoints: { 
      320: {
        direction: "horizontal",
      },
      769: {
        direction: "horizontal",
      }
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>

{%- style -%}

  /* ----------APP Section 13---------- */
  .app-section13 .top-des,.app-section13 .img-list{width:89.6%;margin: 0 auto;clear: both;}
  

  @media (min-width: 769px) {
   
    .top-des p {
      padding:5rem 0;
      max-width:40%;
      font-size: {{ section.settings.description_fs }}rem;
      line-height: {{ section.settings.description_lh }}rem;
    }

    .app-section13 .img-list li{width:25%;height:550px;overflow: hidden;text-align:center}
    .app-section13 .img-list li img{height:100%;width:auto}
    .app-section13 .img-list li:nth-child(2n) img{
      margin-top:25%;
    }

    .a1-section13 .con-box .l .child-con-box{
      top: 70%;
    }
  }
  .mobilemySwiper{text-align:center}
   @media (min-width: 1200px) {
    .mobilemySwiper{display:none}
    
    .img-list{display:flex}
   }

  @media (max-width: 1200px) {
    .mobilemySwiper{display:block}
    .mobilemySwiper .swiper-pagination{display:none}
    .img-list{display:none}
  }

  
  @media (max-width: 768px) {
    
    .app-section13{ padding-top: 8rem; }
    .app-section13 .img-list{ text-align: center; }
    .app-section13 .img-list .image-item{ display: none; }
    .img-list .image-item:first-child{ display: inline !important; }
    .app-section13 .img-list .image-item img{ max-width: 50%; }
  }

{%- endstyle -%}


{% schema %}
{
  "name": "App Section 13",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "描述"
    },
    {
      "type": "range",
      "id": "description_fs",
      "label": "描述文字大小",
      "default": 2.8,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "description_fs_mobile",
      "label": "移动端描述文字大小",
      "default": 1.2,
      "min": 1,
      "max": 5,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "description_lh",
      "label": "描述行间距",
      "default": 3.2,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "description_lh_mobile",
      "label": "移动端描述行间距",
      "default": 2.4,
      "min": 1,
      "max": 10,
      "step": 0.1,
      "unit": "rem"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "图片"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "App Section 13"
    }
  ]
}
{% endschema %}

<div class="a1-section8">
  <div class="top-title">
    {%- if section.settings.title != blank -%}
      <h1 class="m">
        {{ section.settings.title | escape }}
      </h1>
    {%- endif -%}
    {%- if section.settings.description != blank -%}
      <p>
        {{ section.settings.description | escape }}
      </p>
    {%- endif -%}
    {%- if section.settings.title != blank -%}
      <h1 class="pc">
        {{ section.settings.title | escape }}
      </h1>
    {%- endif -%}
  </div>

  <div class="con-box">
    <div class="l">
      {%- if section.settings.left_img != blank -%}
        <div class="p1">
          <img
            srcset="{{ section.settings.left_img | img_url: 'master' }}"
            src="{{ section.settings.left_img | img_url: 'master' }}"
            alt="{{ section.settings.left_img.alt | escape }}"
            loading="lazy" />
        </div>
      {%- endif -%}
      <div class="child-con-box">
        {%- if section.settings.left_title != blank -%}
          <h1>
            {{ section.settings.left_title | escape }}
          </h1>
        {%- endif -%}
        {%- if section.settings.left_description != blank -%}
          <p>
            {{ section.settings.left_description | escape }}
          </p>
        {%- endif -%}
      </div>
    </div>
    <div class="r">
      {%- if section.settings.right_img != blank -%}
        <div class="p1">
          <img
                srcset="{{ section.settings.right_img | img_url: 'master' }}"
                src="{{ section.settings.right_img | img_url: 'master' }}"
                alt="{{ section.settings.right_img.alt | escape }}"
                loading="lazy"
        >
        </div>
      {%- endif -%}
      <div class="child-con-box">
        {%- if section.settings.right_title != blank -%}
          <h1>
            {{ section.settings.right_title | escape }}
          </h1>
        {%- endif -%}
        {%- if section.settings.right_description != blank -%}
          <p>
            {{ section.settings.right_description | escape }}
          </p>
        {%- endif -%}
      </div>
    </div>
  </div>

</div>

{%- style -%}

  @media (min-width: 767px) {
    .a1-section8 .top-title h1 {
      font-size: {{ section.settings.title_fs }}rem;
      line-height: {{ section.settings.title_lh }}rem;
    }
    .a1-section8 .top-title p {
      font-size: {{ section.settings.description_fs }}rem;
      line-height: {{ section.settings.description_lh }}rem;}
    }
  
    .a1-section8 .l .child-con-box h1 {
      font-size: {{ section.settings.left_title_fs }}rem;
      line-height: {{ section.settings.left_title_lh }}rem;
    }
    .a1-section8 .l .child-con-box p {
      font-size: {{ section.settings.left_description_fs }}rem;
      line-height: {{ section.settings.left_description_lh }}rem;
    }
  
    .a1-section8 .r .child-con-box h1 {
      font-size: {{ section.settings.right_title_fs }}rem;
      line-height: {{ section.settings.right_title_lh }}rem;
    }
    .a1-section8 .r .child-con-box p {
      font-size: {{ section.settings.right_description_fs }}rem;
      line-height: {{ section.settings.right_description_lh }}rem;
    }
  }

  @media (max-width: 768px) {

  }

{%- endstyle -%}

